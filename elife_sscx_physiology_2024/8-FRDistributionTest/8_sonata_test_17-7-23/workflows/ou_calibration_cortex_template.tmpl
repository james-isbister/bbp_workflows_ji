{

  "run": {
    "dt": 0.025,
    "tstop": $sim_duration,
    "random_seed": 12345
  },

  "conditions": {
    "extracellular_calcium": $ca,
    "v_init": -80.0,
    "spike_location": "AIS",
    "mechanisms": {
        "ProbAMPANMDA_EMS": {
            "init_depleted": true,
            "minis_single_vesicle": true
        },
        "ProbGABAAB_EMS": {
            "init_depleted": true,
            "minis_single_vesicle": true
        }
    }
  },

  "target_simulator": "CORENEURON",
  "network": "../../../circuit_config.json",
  "node_sets_file": "../../../../O1_data_physiology/node_sets.json",
  "node_set": "$node_set",
  "output": {
    "output_dir": "./reporting",
    "spikes_file": "spikes.h5"
  },
  

  "connection_overrides": [
        {
            "name": "init",
            "source": "$node_set",
            "target": "$node_set",
            "weight": 1.0
        },
        {
            "name": "disconnect",
            "source": "$node_set",
            "target": "$node_set",
            "delay": 0.025,
            "weight": 0.0
        },
        {
            "name": "reconnect",
            "source": "$node_set",
            "target": "$node_set",
            "delay": $reconn_delay,
            "weight": 1.0
        }
    ],


  "inputs": {
     "Stimulus gExc_L1": {
        "input_type": "conductance",
        "module": "relative_ornstein_uhlenbeck",
        "delay": $ornstein_uhlenbeck_delay,
        "duration": $sim_duration,
        "reversal": 0,
        "tau": 2.7,
        "mean_percent": $ornstein_uhlenbeck_mean_pct_L1I,
        "sd_percent": $ornstein_uhlenbeck_sd_pct_L1I,
        "node_set": "Layer1Inhibitory"
    },
    "Stimulus gExc_L23E": {
        "input_type": "conductance",
